{% extends "frontend/base.html.twig" %}
{% block title %}Heavy-Drive - A votre disposition pour toutes demande de contact ou de réservation de voitures{% endblock %}
{% block body %}
    <div class="container">
        <div class="col-md-12 text-center">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2616.012147647287!2d2.340487315680448!3d49.02937597930455!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e633675a42213f%3A0x2a281a61a90ca6c2!2sHeavy+Drive!5e0!3m2!1sfr!2sfr!4v1495117720820"
                    width="1000" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
        <div class="col-md-12 text-center">
            <div class="container">
                <div class="row">
                    <div class=" col-lg-offset-3 col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="row">
                                            <div class="col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
                                                <img class="img- img-responsive" src="{{ asset('images/logohd.ico') }}">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="row">
                                            <div class="centered-text col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6">
                                                <div itemscope="" itemtype="http://schema.org/Person">
                                                    <h2><span itemprop="name">Contact Détails</span></h2>
                                                    <h5> 15 rue de la briquetterie<br>Domont, 95330<br></h5>
                                                    <h5><i class="fa fa-phone"></i>
                                                        <abbr title="Phone">Téléphone</abbr>: 06 63 97 50 51</h5>
                                                    <h5><i class="fa fa-envelope-o"></i>
                                                        <abbr title="Email">E-mail</abbr>: <a href="">contact@heavy-drive.com</a>
                                                    </h5>
                                                    <h5><i class="fa fa-clock-o"></i>
                                                        <abbr title="Hours">Horraire</abbr>: lundi - samedi: 9h30 -
                                                        18h00 </h5>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <div class="row">
                                    <div id="social-links" class=" col-lg-12">
                                        <div class="row">
                                            <div class="col-xs-6 col-sm-3 col-md-2 col-lg-3 social-btn-holder">
                                                <a title="google" class="btn btn-social btn-block btn-google"
                                                   target="_BLANK" href="http://plus.google.com/+You/">
                                                    <i class="fa fa-google"></i> G+
                                                </a>
                                            </div>
                                            <div class="col-xs-6 col-sm-3 col-md-2 col-lg-3 social-btn-holder">
                                                <a title="facebook" class="btn btn-social btn-block btn-facebook"
                                                   target="_BLANK" href="http://twitter.com/yourid">
                                                    <i class="fa fa-facebook"></i> /facebook
                                                </a>
                                            </div>
                                            <div class="col-xs-6 col-sm-3 col-md-2 col-lg-3 social-btn-holder">
                                                <a title="twitter" class="btn btn-social btn-block btn-twitter"
                                                   target="_BLANK" href="http://github.com/yourid">
                                                    <i class="fa fa-twitter"></i> /Twitter
                                                </a>
                                            </div>
                                            <div class="col-xs-6 col-sm-3 col-md-2 col-lg-3 social-btn-holder">
                                                <a title="stackoverflow"
                                                   class="btn btn-social btn-block btn-stackoverflow" target="_BLANK"
                                                   href="http://stackoverflow.com/users/youruserid/yourid">
                                                    <i class="fa fa-stack-overflow"></i> /yourid
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid" id="content-contact">
            <div class="row">
                <div class="col-md-12">
                    <form action="{{ path('heavy_contact') }}" method="post" {{ form_enctype(form) }} id="contactForm" class="contact">

                        {{ form_errors(form) }}

                        <div class="control-group form-group">
                            <div class="controls">
                                {{ form_row(form.name, { 'attr': {'class': 'form-control input-md'} } ) }}
                            </div>
                        </div>
                        <div class="control-group form-group">
                            <div class="controls">
                                {{ form_row(form.phone, { 'attr': {'class': 'form-control input-md'} } ) }}
                            </div>
                        </div>
                        <div class="control-group form-group">
                            <div class="controls">
                                {{ form_row(form.email, { 'attr': {'class': 'form-control input-md'} } ) }}
                            </div>
                        </div>
                        <div class="control-group form-group">
                            <div class="controls">
                                {{  form_row(form.subject, { 'attr': {'class': 'form-control input-md'} } ) }}
                            </div>
                        </div>
                        <div class="control-group form-group">
                            <div class="controls">
                                {{  form_row(form.message, { 'attr': {'class': 'form-control input-md'} } ) }}
                            </div>
                        </div>
                        {{ form_rest(form) }}

                        <input type="submit" value="Submit" class="btn btn-default" />
                    </form>
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="flash-notice">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}