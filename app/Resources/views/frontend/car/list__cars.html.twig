<!-- Page Content -->
{% import 'frontend/car/macros.html.twig' as car_macro %}
<div class="container">
    <!-- Page Features -->
    <div class="row text-center">
        {% for car in cars %}
            <div class="col-md-4 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <img src="{{ car.pictures|first }}" alt="{{ car.carMaker}}-{{ car.carModel }}">
                    <div class="panel-body">
                        <h2>{{ (car.carLabel) }}</h2>
                        <p> Place assises : {{ car.passengerCapacity }}</p>
                        <p>Agence : Domont</p>
                        {% set priceServiceToPay = priceRepository.getPriceCarByService(1, car.id).totalPrice %}
                        <p>A partir de :<strong> {{ priceServiceToPay }} € </strong></p>
                    </div>
                    <div class="panel-footer">
                        <a href="{{ path('car_details', {'id': car.id, 'mark': car.carMaker, 'model': car.carModel}) }}" class="btn btn-default">Détails et tarifs</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>